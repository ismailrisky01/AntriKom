<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_gradient"
    tools:context=".ui.pengajuan.PengajuanFragment">

    <TextView
        android:id="@+id/ID_Pengajuan_txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/comfortaa"
        android:text="Ambil Antrianmu !"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ID_Pengajuan_TxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="Nama"
        android:textColor="@color/txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_Pengajuan_EdtName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ID_Pengajuan_EdtName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="   Nama Mahasiswa"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:background="@drawable/loginbuttonbg"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_txtJudul"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/ID_Pengajuan_TxtNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/comfortaa"
        android:text="NIM"
        android:textColor="@color/txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_Pengajuan_EdtNIM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_EdtName"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/ID_Pengajuan_EdtNIM"
        android:layout_width="match_parent"

        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="   NIM"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:background="@drawable/loginbuttonbg"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_EdtName" />

    <TextView
        android:id="@+id/ID_Pengajuan_TxtSubjek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/comfortaa"
        android:text="Subjek"
        android:textColor="@color/txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_Pengajuan_EdtSubjek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_EdtNIM"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ID_Pengajuan_EdtSubjek"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbuttonbg"
        app:layout_constraintBottom_toTopOf="@+id/ID_Pengajuan_Button_Ambil_Antrian"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_EdtNIM">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:inputType="none"
            android:text="Select" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ID_Pengajuan_Button_Ambil_Antrian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2B331F"
        android:fontFamily="@font/poppins"
        android:text="Ambil Antrian"
        android:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_Pengajuan_EdtSubjek"
        app:layout_constraintVertical_bias="0.524" />

</androidx.constraintlayout.widget.ConstraintLayout>